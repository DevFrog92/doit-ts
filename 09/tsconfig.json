{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "target": "es5",
    "lib": ["es2015", "dom", "dom.iterable"],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,
    "downlevelIteration": true,
    "useUnknownInCatchVariables": false, // catch statement에서 사용되는 error parameter
    "paths": {"*": ["node_modules/*"]}
  },
  "include": ["src/**/*"]
}